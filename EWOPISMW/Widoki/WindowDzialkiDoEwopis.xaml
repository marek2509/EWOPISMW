<Window x:Class="EWOPISMW.Widoki.WindowDzialkiDoEwopis"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EWOPISMW.Widoki"
        mc:Ignorable="d"
        Title="EWOPISMW" Height="450" Width="800" x:Name="windowDzialkiDoEwopis" Icon="/img/LOGOEWM.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="625*"/>
            <ColumnDefinition Width="167*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Menu Grid.ColumnSpan="2">
            <MenuItem Header="Baza">
                <MenuItem Header="Ustaw ściężkę do EWOPIS.fdb" Click="MenuItem_ClickUstawSciezke"></MenuItem>

            </MenuItem>
            <MenuItem x:Name="polaczMenu" Header="Połącz" Click="MenuItem_ClickPolaczZBaza"></MenuItem>
            <MenuItem Header="Port firebird">
                <RadioButton GroupName="port" x:Name="radioPort3050" Checked="RadioPort3050_Checked">3050</RadioButton>
                <RadioButton GroupName="port" x:Name="radioPort3051" Checked="RadioPort3051_Checked">3051</RadioButton>
            </MenuItem>
        </Menu>


        <StackPanel Margin="0,20" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Border BorderBrush="DimGray" BorderThickness="2">
                <DockPanel HorizontalAlignment="Center">
                    <Label HorizontalAlignment="Center" FontSize="20" FontWeight="DemiBold">
                        Ładowanie działek do Ewopisu
                    </Label>
                    <Image Source="/img/LOGOEWM.png" Height="30" Width="30"/>
                </DockPanel>


            </Border>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="31*"/>
                    <ColumnDefinition Width="362*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="65"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <DockPanel Grid.ColumnSpan="2">
                    <StackPanel Width="250">
                        <Button Click="Button_ClickOdczytajParametry" Margin="0,2,0,1" Cursor="Hand">
                            <DockPanel>
                                <Label>Importuj parametry</Label>
                                <Image Source="/img/działka.png" Height="25"></Image>
                            </DockPanel>
                        </Button>
                        <Button Click="Button_Click" Cursor="Hand">
                            <DockPanel>
                                <Label>Ładowanie do bazy</Label>
                                <Image Source="/img/database3.png" Height="25"></Image>
                            </DockPanel>

                        </Button>
                    </StackPanel>


                    <StackPanel Margin="20,0,0,0">
                        <CheckBox x:Name="checkBoxZmiana" Cursor="Hand">
                            Działki "do dodania" na zmianę
                        </CheckBox>
                        <Button x:Name="buttonPobierzZmiany" IsEnabled="{Binding ElementName=checkBoxZmiana, Path=IsChecked}" Click="ButtonPobierzZmiany_Click">
                            Pobierz dostępne zmiany
                        </Button>
                        <ComboBox x:Name="listboxZmiany" Height="25" SelectedIndex="0"></ComboBox>
                    </StackPanel>


                    <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Label>Jak powinien wyglądać format importu działek:</Label>
                        <Button Cursor="Hand" Width="30" Height="30" Click="Button_Click_pokaz_format_importu">
                            <Label>?</Label>
                        </Button>
                    </DockPanel>

                </DockPanel>
                <DockPanel></DockPanel>
                <DataGrid Grid.Row="1" x:Name="dgParametry" Grid.ColumnSpan="2" Padding="0, 5"></DataGrid>
                <!--<DataGrid Grid.Row="1" x:Name="dgParametryZTxt">
                        
                    </DataGrid>-->
            </Grid>

